---
import info from "../data/info.json";
const mailTo = `mailto:${info.contact.email}`;
---

<header>
    <nav class="navegacion">
        <a href="#">HOME</a>
        <a href="#">SOBRE MI</a>
        <a href="#">PROYECTOS</a>
    </nav>
    <div class="iconos">
        <a href={info.contact.linkedin} target="_blank"
            ><svg
                width="27"
                height="24"
                viewBox="0 0 27 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M6.13 24V7.80641H0.342145V24H6.13ZM3.23605 5.59545C5.25439 5.59545 6.51064 4.35196 6.51064 2.79796C6.47303 1.20898 5.2544 0 3.27434 0C1.29449 0 0 1.20898 0 2.79796C0 4.35196 1.25598 5.59545 3.19832 5.59545H3.23605Z"
                    fill="white"></path>
                <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M9.33264 24H15.1204V14.9568C15.1204 14.4728 15.1581 13.9893 15.3109 13.6434C15.7293 12.6764 16.6816 11.6749 18.2805 11.6749C20.3749 11.6749 21.2127 13.1599 21.2127 15.3368V24H27V14.7148C27 9.74088 24.1446 7.42641 20.3367 7.42641C17.2143 7.42641 15.8435 9.04942 15.082 10.1549H15.1206V7.80641H9.3328C9.40875 9.3259 9.33264 24 9.33264 24Z"
